<div id="copterlist">
  {% if copters %}
  <ul id="copterlist" class="nav nav-sidebar">
    {% for c in copters %}
      <li class="{% if c.uuid == copter.uuid %}active{% endif %}"><a href="/copter/{{ c.uuid }}">{{ c.name }}</a></li>
    {% endfor %}
  </ul>
  {% else %}
  <p>No copters flying.</p>
  {% endif %}
</div>
